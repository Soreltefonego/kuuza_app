datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  MANAGER
  CLIENT
}

enum TransactionType {
  CREDIT
  DEBIT
  TRANSFER
  BUY_CREDIT
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  firstName     String
  lastName      String
  phone         String?
  role          Role
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  manager       Manager?
  client        Client?

  sentTransactions     Transaction[] @relation("FromUser")
  receivedTransactions Transaction[] @relation("ToUser")
  chatMessages        ChatMessage[]

  @@index([email])
  @@index([role])
}

model Manager {
  id              String    @id @default(cuid())
  userId          String    @unique
  creditBalance   BigInt    @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  clients         Client[]
  payments        OrangeMoneyPayment[]
  conversations   ChatConversation[]
  notifications   Notification[]

  @@index([userId])
}

model Client {
  id              String    @id @default(cuid())
  userId          String    @unique
  managerId       String
  accountBalance  BigInt    @default(0)
  activationToken String?   @unique
  isActivated     Boolean   @default(false)
  activatedAt     DateTime?
  isBlocked       Boolean   @default(false)
  blockedAt       DateTime?
  blockedReason   String?
  deletedAt       DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  manager         Manager   @relation(fields: [managerId], references: [id], onDelete: Cascade)
  accountNumber   String?   @unique
  conversations   ChatConversation[]
  notifications   Notification[]

  @@index([userId])
  @@index([managerId])
  @@index([activationToken])
}

model Transaction {
  id              String            @id @default(cuid())
  type            TransactionType
  amount          BigInt
  fromUserId      String?
  toUserId        String?
  description     String?
  status          TransactionStatus @default(PENDING)
  reference       String            @unique @default(cuid())
  metadata        Json?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  fromUser        User?             @relation("FromUser", fields: [fromUserId], references: [id], onDelete: SetNull)
  toUser          User?             @relation("ToUser", fields: [toUserId], references: [id], onDelete: SetNull)
  payment         OrangeMoneyPayment?

  @@index([fromUserId])
  @@index([toUserId])
  @@index([type])
  @@index([status])
  @@index([reference])
  @@index([createdAt(sort: Desc)])
}

model OrangeMoneyPayment {
  id              String        @id @default(cuid())
  managerId       String
  amount          BigInt
  transactionId   String        @unique
  status          PaymentStatus @default(PENDING)
  phoneNumber     String?
  paymentReference String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  manager         Manager       @relation(fields: [managerId], references: [id], onDelete: Cascade)
  transaction     Transaction   @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@index([managerId])
  @@index([transactionId])
  @@index([status])
}

model ChatConversation {
  id              String        @id @default(cuid())
  clientId        String
  managerId       String?
  status          String        @default("ACTIVE") // ACTIVE, CLOSED, ARCHIVED
  subject         String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  closedAt        DateTime?

  client          Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  manager         Manager?      @relation(fields: [managerId], references: [id], onDelete: SetNull)
  messages        ChatMessage[]

  @@index([clientId])
  @@index([managerId])
  @@index([status])
  @@index([createdAt(sort: Desc)])
}

model ChatMessage {
  id              String        @id @default(cuid())
  conversationId  String
  senderId        String
  senderType      String        // CLIENT, MANAGER, SYSTEM
  content         String        @db.Text
  isRead          Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  conversation    ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender          User          @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([senderId])
  @@index([createdAt(sort: Desc)])
}

model Notification {
  id              String        @id @default(cuid())
  clientId        String
  managerId       String
  title           String
  message         String        @db.Text
  type            String        @default("INFO") // INFO, WARNING, SUCCESS, ERROR
  isRead          Boolean       @default(false)
  readAt          DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  client          Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  manager         Manager       @relation(fields: [managerId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@index([managerId])
  @@index([isRead])
  @@index([createdAt(sort: Desc)])
}